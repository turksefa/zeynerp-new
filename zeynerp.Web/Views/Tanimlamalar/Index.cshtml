@{
    ViewData["LayoutTitle"] = "Tan覺mlamalar";
}

<header class="page-header">
    <h2>@ViewData["LayoutTitle"]</h2>    
</header>

<div class="row">
    <div class="col-lg-6 col-xl-4">
        <div class="row">
            <div class="col-lg-12 pb-2 pb-lg-0 mb-3 mb-lg-0">
                <div class="card card-modern">
                    <div class="card-body py-4">
                        <div class="row align-items-center">
                            <div class="col-md-4 text-left text-md-right pr-md-4 mt-4 mt-md-0 d-none d-md-block border-end text-center">
                                <i
                                    class="fas fa-home icon icon-inline icon-xl bg-primary rounded-circle text-color-light"></i>
                            </div>
                            <div class="col-12 col-md-7 col-xl-6 text-center text-md-left mx-auto">
                                <a asp-action="GenelTanimlar"><span class="text-6 text-color-dark">Genel
                                        Tan覺mlamalar</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-xl-4 mt-lg-4 mt-xl-0">
        <div class="row">
            <div class="col-lg-12 pb-2 pb-lg-0 mb-3 mb-lg-0">
                <div class="card card-modern">
                    <div class="card-body py-4">
                        <div class="row align-items-center">
                            <div class="col-md-4 text-left text-md-right pr-md-4 mt-4 mt-md-0 d-none d-md-block border-end text-center">
                                <i
                                    class="fas fa-calculator icon icon-inline icon-xl bg-primary rounded-circle text-color-light"></i>
                            </div>
                            <div class="col-12 col-md-7 col-xl-6 text-center text-md-left mx-auto">
                                <a asp-controller="MuhasebeTanimlamalar"><span class="text-6 text-color-dark">Muhasebe
                                        Tan覺mlamalar</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-xl-4 mt-lg-4 mt-xl-0">
        <div class="row">
            <div class="col-lg-12 pb-2 pb-lg-0 mb-3 mb-lg-0">
                <div class="card card-modern">
                    <div class="card-body py-4">
                        <div class="row align-items-center">
                            <div class="col-md-4 text-left text-md-right pr-md-4 mt-4 mt-md-0 d-none d-md-block border-end text-center">
                                <i
                                    class="fas fa-boxes icon icon-inline icon-xl bg-primary rounded-circle text-color-light"></i>
                            </div>
                            <div class="col-12 col-md-7 col-xl-6 text-center text-md-left mx-auto">
                                <a asp-controller="StokTanimlamalar"><span class="text-6 text-color-dark">Stok
                                        Tan覺mlamalar</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>