    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const updateNavbar = () => {
                const navbar = document.querySelector('.navbar');
                const teklifBtn = document.querySelector('.navbar .btn-outline-light, .navbar .btn-outline-dark');
                const logo = document.querySelector('.navbar-brand img');

                if (window.scrollY > 50) {
                    navbar.classList.remove('navbar-transparent');
                    navbar.classList.add('navbar-scrolled');
                    if (teklifBtn && teklifBtn.classList.contains('btn-outline-light')) {
                        teklifBtn.classList.remove('btn-outline-light');
                        teklifBtn.classList.add('btn-outline-dark');
                    }
                    if (logo) {
                        logo.style.filter = '';
                    }
                } else {
                    navbar.classList.remove('navbar-scrolled');
                    navbar.classList.add('navbar-transparent');
                    if (teklifBtn && teklifBtn.classList.contains('btn-outline-dark')) {
                        teklifBtn.classList.remove('btn-outline-dark');
                        teklifBtn.classList.add('btn-outline-light');
                    }
                    if (logo) {
                        logo.style.filter = 'brightness(100)';
                    }
                }
            };

            updateNavbar();

            window.addEventListener('scroll', updateNavbar);

            @* let touchStartX = 0; *@
                @* carousel.addEventListener('touchstart', e => touchStartX = e.changedTouches[0].screenX, false);
            carousel.addEventListener('touchend', e => {
                const touchEndX = e.changedTouches[0].screenX;
                const swipeThreshold = 50;

                if (touchEndX < touchStartX - swipeThreshold) carouselInstance.next(); if (touchEndX > touchStartX +
                    swipeThreshold) carouselInstance.prev();
            }, false); *@

                document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                    anchor.addEventListener('click', e => {
                        e.preventDefault();
                        const targetId = anchor.getAttribute('href');
                        if (targetId === "#") return;

                        const targetElement = document.querySelector(targetId);
                        if (!targetElement) return;

                        const navbar = document.querySelector('.navbar');
                        const navbarHeight = navbar.offsetHeight;
                        const windowHeight = window.innerHeight;
                        const elementHeight = targetElement.offsetHeight;
                        const elementPosition = targetElement.getBoundingClientRect().top + window.pageYOffset;

                        const scrollPosition = elementHeight > windowHeight - navbarHeight
                            ? elementPosition - navbarHeight
                            : elementPosition - (windowHeight - elementHeight) / 2 - navbarHeight / 2;

                        window.scrollTo({
                            top: scrollPosition,
                            behavior: 'smooth'
                        });
                    });
                });

            const animateOnScroll = () => {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            if (entry.target.classList.contains('animate-when-visible')) {
                                entry.target.classList.add('is-visible');

                                const animationClass = entry.target.dataset.animation;
                                const animationDelay = entry.target.dataset.delay;

                                if (animationClass) {
                                    if (animationDelay) {
                                        entry.target.style.animationDelay = `${animationDelay}ms`;
                                    }
                                    entry.target.classList.add('animate__animated', animationClass);
                                }
                            }

                            observer.unobserve(entry.target);
                        }
                    });
                }, { threshold: 0.1 });

                document.querySelectorAll('.animate-when-visible').forEach(el => {
                    observer.observe(el);
                });
            };

            animateOnScroll();

            const navbarCollapse = document.getElementById('navbarSupportedContent');
            const navbar = document.querySelector('.navbar');
            if (navbarCollapse) {
                navbarCollapse.addEventListener('show.bs.collapse', function () {
                    navbarCollapse.classList.add('show');
                });
                navbarCollapse.addEventListener('hide.bs.collapse', function () {
                    navbarCollapse.classList.remove('show');
                });
            }

            const scrollToTopBtn = document.getElementById('scroll-to-top');
            if (scrollToTopBtn) {
                scrollToTopBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.getElementById('anasayfa');
                    if (target) {
                        target.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            }

            const chatbotBtn = document.getElementById('chatbot-btn');
            const chatbotPanel = document.getElementById('chatbot-panel');
            const chatbotClose = document.getElementById('chatbot-close');
            if (chatbotBtn && chatbotPanel && chatbotClose) {
                chatbotPanel.classList.add('d-none');
                chatbotBtn.addEventListener('click', function () {
                    chatbotPanel.classList.remove('d-none', 'fadeOutDown');
                    chatbotPanel.classList.add('d-flex', 'fadeInUp');
                });
                chatbotClose.addEventListener('click', function () {
                    chatbotPanel.classList.remove('fadeInUp');
                    chatbotPanel.classList.add('fadeOutDown');
                    chatbotPanel.addEventListener('animationend', function handler() {
                        chatbotPanel.classList.remove('d-flex', 'fadeOutDown');
                        chatbotPanel.classList.add('d-none');
                        chatbotPanel.removeEventListener('animationend', handler);
                    });
                });
            }

            const chatbotForm = document.getElementById('chatbot-form');
            const chatbotInput = document.getElementById('chatbot-input');
            const chatbotMessages = document.getElementById('chatbot-messages');
            if (chatbotForm && chatbotInput && chatbotMessages) {
                chatbotForm.addEventListener('submit', function (e) {
                    e.preventDefault();
                    const msg = chatbotInput.value.trim();
                    if (!msg) return;
                    const userMsg = document.createElement('div');
                    userMsg.className = 'd-flex justify-content-end mb-2';
                    userMsg.innerHTML = `<div class="bg-primary text-white rounded-3 px-3 py-2">${msg}</div>`;
                    chatbotMessages.appendChild(userMsg);
                    chatbotInput.value = '';
                    chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
                    setTimeout(() => {
                        const botMsg = document.createElement('div');
                        botMsg.className = 'd-flex mb-2';
                        botMsg.innerHTML = `<div class="bg-light border rounded-3 px-3 py-2 text-dark">Bu sadece bir demo arayÃ¼zÃ¼dÃ¼r.</div>`;
                        chatbotMessages.appendChild(botMsg);
                        chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
                    }, 700);
                });
            }
        });
