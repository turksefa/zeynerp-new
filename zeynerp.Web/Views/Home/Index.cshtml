<script>
    document.addEventListener('DOMContentLoaded', () => {
        const carousel = document.getElementById('kullaniciHikayeleriCarousel');
        const carouselInstance = new bootstrap.Carousel(carousel, {
            interval: 5000,
            touch: true,
            wrap: true
        });
    });
    
    document.addEventListener('DOMContentLoaded', function () {
        const productCards = document.querySelectorAll('.product-card');
        productCards.forEach(card => {
            card.addEventListener('click', function () {
                productCards.forEach(c => c.classList.remove('active-card'));
                this.classList.add('active-card');
                const productType = this.getAttribute('data-product');
                document.querySelectorAll('.product-content').forEach(content => {
                    content.style.display = 'none';
                });
                const selectedContent = document.getElementById(`${productType}-content`);
                selectedContent.style.display = 'block';
                selectedContent.classList.remove('animate__fadeIn');
                void selectedContent.offsetWidth;
                selectedContent.classList.add('animate__fadeIn');
            });
        });
        productCards[0].classList.add('active-card');
    });
</script>